@using Microsoft.AspNetCore.Identity
@using E_Ticket_Stor.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "ملفي الشخصي";
    var user = await UserManager.GetUserAsync(User);
}

<h2>مرحبًا بك، @user.FirstName+@user.LastName</h2>

<div class="card">
    <div class="card-body">
        <p><strong>اسم المستخدم:</strong> @user.UserName</p>
        <p><strong>البريد الإلكتروني:</strong> @user.Email</p>
        <p><strong>رقم الهاتف:</strong> @user.PhoneNumber</p>
        <a class="btn btn-primary" asp-controller="Account" asp-action="Manage">تعديل الملف الشخصي</a>
    </div>
</div>
