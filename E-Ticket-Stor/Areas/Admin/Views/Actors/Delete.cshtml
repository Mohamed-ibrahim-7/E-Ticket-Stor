@model E_Ticket_Stor.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <h3 class="text-danger mb-3">Are you sure you want to delete this actor?</h3>

            <img src="@Url.Content("~/images/" + Model.ProfilePictureURL)"
                 class="rounded-circle shadow mb-3"
                 style="width: 120px;" alt="Image" />

            <h4>@Model.FullName</h4>
            <p>@Model.Bio</p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
