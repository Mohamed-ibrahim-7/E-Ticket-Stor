@model E_Ticket_Stor.Models.Producer

@{
    ViewData["Title"] = "Producer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <img src="@Url.Content("~/images/" + Model.ProfilePictureURL)"
                 class="rounded-circle shadow mb-3"
                 style="width: 150px;" alt="Image" />

            <h3 class="text-primary">@Model.FullName</h3>
            <p class="text-muted">@Model.Bio</p>

            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
