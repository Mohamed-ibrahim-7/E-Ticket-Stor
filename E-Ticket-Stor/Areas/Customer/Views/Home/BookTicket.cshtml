@model E_Ticket_Stor.Models.Movie

@{
    ViewData["Title"] = "حجز تذكرة";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">حجز تذكرة: @Model.Name</h2>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageURL" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">اسم الفيلم:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">الوصف:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">السعر:</dt>
                <dd class="col-sm-8">@Model.Price.ToString("c")</dd>
            </dl>

            <form asp-action="BookTicketConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success">تأكيد الحجز</button>
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </form>
        </div>
    </div>
</div>
